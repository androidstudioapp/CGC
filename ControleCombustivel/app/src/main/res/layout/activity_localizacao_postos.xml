<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LocalizacaoPostos"
    android:background="#ffffffff">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/show_location"
        android:text="Mostrar Localização"
        android:background="#ff979491"
        android:layout_gravity="center"
        android:layout_marginTop="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="mostrarLocalizacao"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/mostrar_relatorios"
        android:text="RELATÓRIOS"
        android:background="#ff979491"
        android:layout_gravity="center"
        android:layout_below="@+id/show_location"
        android:layout_alignLeft="@+id/show_location"
        android:layout_alignStart="@+id/show_location"
        android:layout_marginTop="58dp"
        android:onClick="mostrarRelatorios"/>
</RelativeLayout>
